<resources>

    <!-- Base application theme. -->
    <style name="Theme.AppTheme.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/jablotron_blue</item>
        <item name="colorPrimaryVariant">@color/background_grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/jablotron_yellow</item>
        <item name="colorSecondaryVariant">@color/jablotron_yellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSurface">@color/grey_medium</item>
        <item name="colorOnSurface">@color/white</item>

        <!--Platform attributes-->
        <item name="android:navigationBarColor">@color/nav_bar</item>
        <item name="android:statusBarColor">@color/immersive_sys_ui</item>
    </style>

    <style name="AppTheme" parent="Theme.AppTheme.Base"/>

    <style name="AppTheme.Fragment1">
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="AppTheme.Fragment2">
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.Fragment3">
        <item name="android:windowLightStatusBar">true</item>
    </style>

</resources>
